{
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    // "latex-workshop.latex.external.build.command": "make",
    // "latex-workshop.latex.external.build.args": ["all"],
    "latex-workshop.synctex.afterBuild.enabled":true,
    "latex-workshop.bind.enter.key": true,
    "latex-workshop.hover.citation.enabled": true,
    "latex-workshop.latex.outDir": "%DIR%/build",                 // 輸出在main目錄底下的build
    "latex-workshop.latex.recipes": [
        {
            "name": "xe➔bib➔xe➔xe",
            "tools":[
                "xelatex",
                "bib",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "makefile",
            "tools": [
                "make"
            ]
        },
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "make",
            "command": "make",
            "args": [
                "all"
            ]
        },
        {
            // latex 編譯工具和命令
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "--output-directory=%OUTDIR%",
                "%DOCFILE%"
            ]
        },
        {   // 參考文獻編譯器
            "name": "bib",
            "command": "biber",
            "args": [
                "--output-directory=%OUTDIR%",
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.clean.fileTypes": [
        "**/*.acn",
        "**/*.alg",
        "**/*.acr",
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.idx",
        "**/*.ind",
        "**/*.lof",
        "**/*.lot",
        "**/*.out",
        "**/*.toc",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.ist",
        "**/*.fls",
        "**/*.log",
        "**/*.xwm",
        "**/*.run.xml",
        "**/*.fdb_latexmk",
        "**/*.synctex.gz",
    ],
    "latex-workshop.latex.clean.subfolder.enabled":true
}
