{
    "latex-workshop.latex.external.build.command": "make",
    "latex-workshop.latex.external.build.args": ["all"],
    "editor.wordWrap": "off",
    "editor.wordWrapColumn": 80,
    "editor.wrappingIndent": "same",
    "latex-workshop.progress.barStyle":"Block Quadrants",
    "latex-workshop.hover.citation.enabled": true,
    "latex-workshop.bind.enter.key": true,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.synctex.afterBuild.enabled":true,
    "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": true,
    "latex-workshop.latex.outDir": "%DIR%/build",                 // 輸出在main目錄底下的build
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "latex-workshop.latex.recipes": [
        {
            "name": "xe➔bib➔xe➔xe",
            "tools": [
                "make"
            ]
        },
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "make",
            "command": "make",
            "args": [
                "all"
            ]
        },
        {
            // latex 編譯工具和命令
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "--output-directory=%OUTDIR%",
                "%DOC%"
            ]
        },
        {   // 參考文獻編譯器
            "name": "bib",
            "command": "biber",
            "args": [
                "--output-directory=%OUTDIR%",
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.clean.fileTypes": [
        "%DIR%/build/*",
        "build/*",
        "%OUTDIR%/*"
    ]
}
