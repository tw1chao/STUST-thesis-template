{
    ///////// 使用 makefile 編譯專案
    // "latex-workshop.latex.external.build.command": "make",
    // "latex-workshop.latex.external.build.args": ["all"],
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.latex.search.rootFiles.exclude":[],
    "latex-workshop.latex.recipe.default": "lastUsed",
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.ref.viewer": "auto",
    "latex-workshop.latex.rootFile.useSubFile": false,
    "latex-workshop.synctex.afterBuild.enabled":true,
    "latex-workshop.bind.enter.key": true,
    "latex-workshop.hover.citation.enabled": true,
    "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",                 // 輸出在main目錄底下的build
    "latex-workshop.latex.recipes": [
        {
            "name": "xe➔bib➔2xe➔pdf",
            "tools":[
                "xetex",
                "bib",
                "xetex",
                "xetex",
                "xDVIPDFMx",
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            // latex 編譯工具和命令
            "name": "xetex",
            "command": "xelatex",
            "args": [
                "-no-pdf",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-halt-on-error",
                "-output-driver='xdvipdfmx -z0'",
                "--output-directory=%OUTDIR%",
                "%DOC_EXT%"
            ]
        },
        {   // 參考文獻編譯器
            "name": "bib",
            "command": "biber",
            "args": [
                "--output-directory=%OUTDIR%",
                "%DOCFILE%"
            ]
        },
        {   // xdv 轉 PDF
            "name": "xDVIPDFMx",
            "command": "xdvipdfmx",
            "args": [
                "%OUTDIR%/%DOCFILE%",
                "-E",
                "-vv",
                "-o%OUTDIR%/main.pdf",
            ]
        }
    ],
    "latex-workshop.latex.clean.fileTypes": [
        "**/*.pdf",
        "**/*.xdv",
        "**/*.acn",
        "**/*.alg",
        "**/*.acr",
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.idx",
        "**/*.ind",
        "**/*.lof",
        "**/*.lot",
        "**/*.log",
        "**/*.out",
        "**/*.toc",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.ist",
        "**/*.fls",
        "**/*.xwm",
        "**/*.run.xml",
        "**/*.fdb_latexmk",
        "**/*.synctex.gz",
    ],
    "docker.commands.runInteractive": "docker run --rm -it -w /home/thesis -v ${workspaceFolder}:/home/thesis ${exposedPorts} ${tag} bash"
}
