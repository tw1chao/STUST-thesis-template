{
    ///////// 使用 latex-workshop 編譯論文
    "latex-workshop.docker.enabled": true,
    "latex-workshop.latex.autoBuild.run": "never",
    "latex-workshop.synctex.afterBuild.enabled":true,
    "latex-workshop.bind.enter.key": true,
    "latex-workshop.message.error.show":true,
    "latex-workshop.message.warning.show":true,
    "latex-workshop.view.outline.floats.enabled": false,
    "latex-workshop.hover.citation.enabled": true,
    "latex-workshop.latex.outDir": "../build",                 // 輸出在main目錄底下的build
    "latex-workshop.latex.recipes": [
        {
            "name": "xe➔bib➔2xe➔pdf",
            "tools":[
                "xetex",
                "bib",
                "xetex",
                "xetex",
                "xdvipdfmx",
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            // latex 編譯工具和命令
            "name": "xetex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-no-pdf",
                "-halt-on-error",
                "-file-line-error",
                "--output-directory=%OUTDIR%",
                "main.tex"
            ]
        },
        {   // 參考文獻編譯器
            "name": "bib",
            "command": "biber",
            "args": [
                "--output-directory=%OUTDIR%",
                "%DOCFILE%"
            ]
        },
        {   // xdv 轉 PDF
            "name": "xdvipdfmx",
            "command": "xdvipdfmx",
            "args": [
                "../build/main.xdv",
                "-E",
                "-otemplate.pdf",
            ]
        }
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.clean.fileTypes": [
        "**/*.xdv",
        "**/*.acn",
        "**/*.alg",
        "**/*.acr",
        "**/*.aux",
        "**/*.bbl",
        "**/*.bcf",
        "**/*.blg",
        "**/*.idx",
        "**/*.ind",
        "**/*.lof",
        "**/*.lot",
        "**/*.out",
        "**/*.toc",
        "**/*.glg",
        "**/*.glo",
        "**/*.gls",
        "**/*.ist",
        "**/*.fls",
        "**/*.log",
        "**/*.xwm",
        "**/*.run.xml",
        "**/*.fdb_latexmk",
        "**/*.synctex.gz",
    ],
    "latex-workshop.latex.clean.subfolder.enabled": true,
    "docker.commands.runInteractive": "docker run --rm -it -w /home/thesis -v ${workspaceFolder}:/home/thesis ${exposedPorts} ${tag} bash"
}
